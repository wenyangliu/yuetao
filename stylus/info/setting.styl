@import '../head.styl'

.header
	.header-title
		color #323232

.setting_con
	.setting_cell
		height 50px
		margin-top 11px
		background #fff
		line-height 50px
		padding 0 15px
		position relative
		.setting_btn
			content ''
			width 53px
			height 30px
			display inline-block
			background #ea5404
			float right
			margin-top 10px
			border-radius 25px
			position relative
			&:after
				content ''
				width 30px
				height 30px
				background #fff
				position absolute
				border-radius 50%
	.about
	.clear
		&:after
			content ''
			position absolute
			top 50%
			right 15px
			display block
			width 16px
			height 30px
			margin-top -15px
			background url(../../img/content_list_right_icon@2x.png) no-repeat right 0 center
			background-size 50%
		.clear_count
			position absolute
			right 35px
			color #bfbfbf
			font-size 14px
.logout_btn
	height 50px
	margin-top 23px
	line-height 50px
	text-align center
	background #fff

.mask
	display none
	width 100%
	height 100%
	background rgba(0,0,0,0.5)
	position absolute
	top 0
	right 0
	left 0
	bottom 0

.reg-alert
	display none
	width 274px
	height 112px
	background #fff
	border-radius 5px
	position absolute
	left 50%
	top 50%
	margin-top -56px
	margin-left -137px
	text-align center
	.title
		height 64px
		line-height 64px
		border-bottom 1px solid #e1e1e1
		margin 0
	.confirm
		color #ea5404
		display flex
		span
			flex 1
		.cancel
			position relative
			color #646464
			&:after
				content ''
				width 1px
				height 46px
				background-color #d6d7dc
				position absolute
				right 0
				top -16px

