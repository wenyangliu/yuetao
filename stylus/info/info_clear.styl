
@import 'setting.styl'

.mask
	width 100%
	height 100%
	background rgba(0,0,0,0.5)
	position absolute
	top 0
	right 0
	left 0
	bottom 0

.reg-alert
	width 274px
	height 112px
	background #fff
	border-radius 5px
	position absolute
	left 50%
	top 50%
	margin-top -56px
	margin-left -137px
	text-align center
	.title
		height 64px
		line-height 64px
		border-bottom 1px solid #e1e1e1
		margin 0
	.confirm
		color #ea5404
		display flex
		span
			flex 1
		.cancel
			position relative
			color #646464
			&:after
				content ''
				width 1px
				height 46px
				background-color #d6d7dc
				position absolute
				right 0
				top -16px