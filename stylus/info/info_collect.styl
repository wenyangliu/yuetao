*
	margin 0
	padding 0
@import '../head.styl'

.header
	.header-title
		color #323232

.tab
	height 40px
	display flex
	background #fff
	line-height 40px
	margin-top 10px

	span
		flex 1
		text-align center
		position relative
		&.active
			color #ea5404
			border-bottom 2px solid #ea5404
	.need
		&:after
			content ''
			width 1px
			position absolute
			background #d6d7dc
			height 25px
			right 0
			top 6px
.overdue-list
	margin-top 10px
	.overdue-cell
		background #fff
		padding 12px
		margin-top 10px
		display flex
		position relative
		.overdue-con
			padding-left 10px
			padding-top 5px
			h4
				font-weight 600
				font-size 14px
			p
				line-height 24px
				color #7f7f7f
				font-size 12px
			.overdue-btn
				width 4em
				padding 4px 10px
				border 1px solid #ea5404
				border-radius 5px
				color #ea5404
				font-size 12px
			.overdue-price
				color #ea5404
				font-weight 600
				font-size 14px
		.overdue-tips
			color #7f7f7f
			font-size 12px

			.collect
				position absolute
				right 12px
				top 20px
				width 40px
				height 36px
				background url(../../img/nav_collect_press_icon@2x.png) no-repeat
				display block
				background-size 50% 50%
			.overdue-time
				position absolute
				bottom 20px
				right 12px
